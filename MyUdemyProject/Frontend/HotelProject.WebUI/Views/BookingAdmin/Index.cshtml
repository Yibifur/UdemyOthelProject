@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

           
            <div class="table-responsive">
                

                
                <table  class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Mail Adresi</th>
                            <th>Durum</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Yetişkin Sayısı</th>
                            <th>Çocuk Sayısı</th>
                            <th>Oda Sayısı</th>
                            <th>Özel İstek</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            count = count + 1;


                        <tr>
                             
                            <th>@count</th>
                            <td>@item.Name</td>
                            <td>@item.Mail</td>
                            <td><span class="badge badge-primary px-2" >@item.Status</span></td>
                             <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                            <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                             <td class="color-primary">@item.AdultCount</td>
                             <td class="color-primary">@item.ChildCount</td>
                             <td class="color-primary">@item.RoomCount</td>
                             <td class="color-primary">@item.SpecialRequest</td>
                             
                        <td><a href="/BookingAdmin/ApprovedRezervation/@item.BookingID"  class="btn btn-outline-primary">Onayla</a></td>
                                <td><a href="#" class="btn btn-outline-danger">İptal et</a></td>
                                <td><a href="#" class="btn btn-outline-warning">Beklet</a></td>
                                <td><a href="#" class="btn btn-outline-info">Güncelle</a></td>
                                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
                          
                            </tr>
                            
                        }
                    </tbody>
                </table>
            </div>






