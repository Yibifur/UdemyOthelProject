@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="AboutID" />
    <label>Hakkımızda</label>
    
    <br />
    <label>Başlık 1</label>
    <input type="text" asp-for="Title1" class="form-control" />
    <span asp-validation-for="Title1" class="text-info"></span>
    <br />
    <label>Başlık 2</label>
    <input type="text" asp-for="Title2" class="form-control" />
    <span asp-validation-for="Title2" class="text-info"></span>
    <br />
    <label>İçerik </label>
    <input type="text" asp-for="Content" class="form-control" />
    <span asp-validation-for="Content" class="text-info"></span>
    <br />
    <label>Oda Sayısı 2</label>
    <input type="text" asp-for="RoomCount" class="form-control" />
    <span asp-validation-for="RoomCount" class="text-info"></span>
    <br />
    <label>Personel Sayısı</label>
    <input type="text" asp-for="StaffCount" class="form-control" />
    <span asp-validation-for="StaffCount" class="text-info"></span>
    <br />
    <label>Müşteri Sayısı</label>
    <input type="text" asp-for="CustomerCount" class="form-control" />
    <span asp-validation-for="CustomerCount" class="text-info"></span>
    <br />
    <button class="btn btn-outline-success">Hakkında Güncelle</button>
    </form>
