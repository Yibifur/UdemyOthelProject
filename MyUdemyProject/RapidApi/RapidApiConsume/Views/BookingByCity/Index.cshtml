@model List<BookingApiViewModel.Hotel>
@{
    Layout = null;
    int count = 0;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /> <br />
    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>Şehir ID bilgisini giriniz</label>
        <input type="text" class="form-control" name="cityID" />
        <br />
        <button class="btn btn-primary">Bir Şehire göre otelleri bul</button>
    }
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th> Otel Adı</th>
            <th> Otel Puanı</th>
            <th> Otel Detayları</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.property.name</td>
                <td>@item.property.reviewScore</td>
                <td><a href="#" class="btn btn-dark">Detayları Göster</a></td>

            </tr>
        }



    </table>
</div>

